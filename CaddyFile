{
	debug
}

# reusable snippets
(boilerplate) {
        encode gzip zstd
}

ragingdharma.com {

        log {
        output file /var/log/caddy/ragingdharma.com-access.log {
                roll_size 10mb
                roll_keep 20
                roll_keep_for 720h
                }
        }
                
        reverse_proxy http://127.0.0.1:8000
        import boilerplate
        tls eddyizm@gmail.com
}

www.ragingdharma.com {
    redir https://ragingdharma.com{uri}
    import boilerplate
}